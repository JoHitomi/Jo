<h1>Original</h1>
<h3>新規サークル作成</h3>
<%= form_for @tweet do |f| %>
  <div class="field1">
    <%= f.label :サークル名 %>
    <br>
    <%= f.text_area :body, :size => "50✖️1"%>
  </div>
  <div class="field2">
    <%= f.label :サークル紹介 %>
    <br>
    <%= f.text_area :body, :size => "75✖️5" %>
  </div>
  <%= f.submit "作成する" %>
<% end %>
<%= link_to "サークル一覧に戻る", tweets_path %>